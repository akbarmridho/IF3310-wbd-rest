{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "build",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "ts-node": {
    "files": true
  },
  "files": [
    "src/index.d.ts"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "test/**/*.ts"
  ]
}
